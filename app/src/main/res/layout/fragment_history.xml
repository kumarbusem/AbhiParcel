<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimary"
        android:id="@+id/action_bar">

        <TextView
            android:id="@+id/txt_toolbar"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15sp"
            android:layout_height="wrap_content"
            android:text="Previous Orders"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="17sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="end|center"
            android:layout_marginRight="15sp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="24sp"
                android:src="@drawable/ic_help_outline_black_24dp"
                android:layout_height="24sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Help"
                android:textSize="10sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/history_example"
        android:paddingBottom="20sp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="20sp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="15sp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:text="ORDER00021385"
                        android:textColor="#596269"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20sp"
                        android:gravity="right"
                        android:layout_marginTop="10sp"
                        android:text="Feb 05, 12:05 PM"
                        android:textColor="#596269"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/green_dot"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:text="2-728, Sendfast, Venkateswara Hills Colony, Road Number 3, banjar hills, Hyderabad"
                        android:textColor="#272E33"
                        android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/red_dot"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:text="Sri Lakshmi narasimha boys Hostel, Panjagutta, banjar hills, Hyderabad"
                        android:textColor="#272E33"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:background="#EBEDF3">

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:text="Delivered"
                        android:textStyle="bold"
                        android:textColor="#009B4B"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:id="@+id/callSupportButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/button_bg_white_green"
                        android:paddingLeft="16sp"
                        android:paddingTop="8sp"
                        android:paddingRight="16sp"
                        android:paddingBottom="8sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Repeat Order"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4sp"
            android:background="#F1F5F8">

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:text="ORDER00021385"
                        android:textColor="#596269"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20sp"
                        android:gravity="right"
                        android:layout_marginTop="10sp"
                        android:text="Feb 05, 12:05 PM"
                        android:textColor="#596269"
                        android:textSize="13sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/green_dot"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:text="276, Google, Washigton, Venkateswara Hills Colony, Road Number 3, banjar hills, Hyderabad"
                        android:textColor="#272E33"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15sp"
                        android:layout_height="15sp"
                        android:src="@drawable/red_dot"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10sp"
                        android:layout_marginLeft="10sp"
                        android:text="Sri Lakshmi narasimha boys Hostel, Panjagutta, banjar hills, Hyderabad"
                        android:textColor="#272E33"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="10sp"
                    android:background="#EBEDF3">

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:text="Cancelled"
                        android:textStyle="bold"
                        android:textColor="#F35959"
                        android:textSize="15sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10sp"
                        android:background="@drawable/button_bg_white_green"
                        android:paddingLeft="16sp"
                        android:paddingTop="8sp"
                        android:paddingRight="16sp"
                        android:paddingBottom="8sp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Repeat Order"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>


</LinearLayout>




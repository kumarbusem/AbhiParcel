<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:clickable="true"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1F5F8"
        android:orientation="vertical"
        android:paddingBottom="20sp">


        <LinearLayout
            android:id="@+id/callSupportButton"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_passbook"
            android:layout_height="wrap_content"
            android:paddingLeft="16sp"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="30sp"
            android:paddingTop="5sp"
            android:paddingRight="16sp"
            android:paddingBottom="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="PASSBOOK"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:src="@drawable/payments_wallet_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="Sendfast Wallet"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:gravity="end"
            android:text="â‚¹ 100.0"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:textSize="14sp"
        android:textColor="#333A3D"
        android:text="+Add Money to Wallet"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4sp"
        android:layout_marginTop="20sp"
        android:background="#F1F5F8">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="25sp"
        android:layout_marginBottom="25sp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:src="@drawable/payments_paytm_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="Paytm"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:gravity="end"
            android:text="+91 7997031858"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4sp"
        android:background="#F1F5F8">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="10sp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="35sp"
            android:layout_height="35sp"
            android:src="@drawable/payments_cards_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:text="Saved Cards"
            android:textColor="#000000"
            android:textSize="15sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20sp"
            android:gravity="end"
            android:text="+ Add Card"
            android:textColor="#000"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3sp"
        android:background="@drawable/button_bg_black"
        android:layout_margin="20sp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30sp"
            android:background="#F4F7F8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="#4C5E72"
                android:text="My SBI Card"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#484E57"
                android:text="3211 0400 8294 1298"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#484E57"
                android:gravity="right"
                android:text="07/34"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3sp"
        android:background="@drawable/button_bg_black"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30sp"
            android:background="#F4F7F8">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:textSize="14sp"
                android:gravity="left"
                android:textColor="#4C5E72"
                android:text="Ravi ICICI Card"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#484E57"
                android:text="6571 0320 8294 1198"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#484E57"
                android:gravity="right"
                android:text="12/24"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>



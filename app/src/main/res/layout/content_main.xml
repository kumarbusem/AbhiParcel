<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context=".activities.HomeActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="6sp"
        android:id="@+id/main_card"
        app:cardCornerRadius="0sp"
        app:cardElevation="6sp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pickupCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:src="@drawable/green_dot_with_line"/>

                <TextView
                    android:id="@+id/pickup_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:maxLines="1"
                    android:text="Pickup From"
                    android:textColor="#282828"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:background="#F3F3F3"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/destinationCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="6sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20sp"
                    android:src="@drawable/destination_marker_select"/>

                <TextView
                    android:id="@+id/destination_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:maxLines="1"
                    android:text="Delivery to"
                    android:textColor="#282828"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:layout_marginTop="15sp"
                android:layout_marginBottom="15sp"
                android:background="#F3F3F3"
                android:orientation="vertical">

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="Pickup Date:"
                android:layout_marginLeft="25sp"
                android:textSize="13sp"
                android:layout_marginBottom="15sp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="25sp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="25sp"
                    android:layout_gravity="center"
                    android:backgroundTint="#292929"
                    android:layout_marginRight="7sp"
                    android:background="@drawable/calendar"
                    android:layout_height="25sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="29"
                    android:textSize="25sp"
                    android:textColor="#292929"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="th"
                    android:textColor="#292929"
                    android:gravity="top"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mon,"
                    android:textSize="22sp"
                    android:textColor="#292929"
                    android:layout_marginLeft="15sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="July 2019"
                    android:textSize="17sp"
                    android:textColor="#292929"
                    android:layout_marginLeft="10sp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="24sp"
                        android:layout_height="30sp"
                        android:tint="#D51A1A"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:layout_marginRight="20sp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="12sp"
                android:background="#F7F7F7"
                android:visibility="invisible"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/main_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="50sp"
        android:id="@+id/search_button"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="30sp"
        android:background="#D51A1A"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="22sp"
            android:background="@drawable/bus"
            android:layout_gravity="center"
            android:layout_height="22sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Search"
            android:textColor="#fff"
            android:layout_margin="15sp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="28sp"
            android:background="@drawable/bike"
            android:layout_gravity="center"
            android:layout_height="28sp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="Offers"
        app:layout_constraintBottom_toTopOf="@id/offers_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15sp"
        android:textSize="16sp"
        android:textColor="#363636"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="View all"
        app:layout_constraintBottom_toTopOf="@id/offers_card"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="17sp"
        android:textSize="14sp"
        android:textColor="#222222"
        android:layout_height="wrap_content"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="3sp"
        app:cardElevation="3sp"
        app:cardCornerRadius="0sp"
        android:id="@+id/offers_card"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">
        <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:autoStart="true"
            android:flipInterval="3000">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/offer_paytm"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/offer_sendfast"/>


        </ViewFlipper>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>